#include<stdio.h>
#include<conio.h>

int i,j,k,a,n,c;
void main()
{
printf("Masukkan jumlah bilangan: ");scanf("%d", &n);
for(i=0;i<=n;i++)
{
for(j=1;j<=n-i;j++)
{
printf(" ");
}
for(k=1;k<=i;k++)
{
printf("*");
}
for(a=2;a<=i;a++)
{
printf("*");
}
printf("\n");
}
for(i=0;i<=n;i++)
{
for(k=1;k<=i;k++)
{
printf(" ");
}
for(k=1;k<=n-i;k++)
{
printf("*");
}
for(c=2;c<=n-i;c++)
{
printf("*");
}
printf("\n");
}
}
  
